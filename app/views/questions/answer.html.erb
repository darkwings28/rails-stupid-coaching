    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= @question %></p>
        <footer class="blockquote-footer"> <cite title="Source Title">You</cite></footer>
      </blockquote>
    </div>
  </div>
    
  <div class="card"> 
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= @answer%></p>
        <footer class="blockquote-footer"> <cite title="Source Title">Coach</cite></footer>
      </blockquote>
    </div>
  </div>
  <%= link_to "Ask another question", ask_path %>
</div>


 
 